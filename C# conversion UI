        private void numericUpDown1_ValueChanged(object sender, EventArgs e)
        {
            meters = (double)numericUpDown1.Value;

            label8.Text = (meters * 3.28084).ToString() + " feet";
            label9.Text = (meters * 39.3701).ToString() + " inches";
            label7.Text = (meters * 1.09361).ToString() + " yards";
            label6.Text = (meters * 0.000621371).ToString() + " miles";
        }

